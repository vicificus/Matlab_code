function [data, dt] = shiftedtime (data)
arguments
        data (:,1) double 
end

%if the sequence is shifted relative to zero
%commonly used to process time sequences
%by default, the input array is overwritten

if data (1,1) < 0         
    minD = min(data);
    data = data - minD;
    dt = data(1,1) - data(2,1);
end
